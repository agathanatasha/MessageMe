<div class="ui huge header" align="center">Welcome to MessageMe App - <i>a complete Chat App</i></div>
<h2 class="ui center aligned icon header">
    <i class="circular red power off icon"></i>
    Login to continue
  </h2>
  <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <%= form_for(:session, :html => {class: "ui", role: "form"}) do |f| %>
          <div class="field">
            <%= f.label :username %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username"%>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password %>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: "Password"%>
              <i class="lock icon"></i>
            </div>
          </div>
          <div class="field">
          <%= f.submit "Login", class: "ui red submit button" %>
          </div>
        <% end %>
      </div>
      <div class="middle aligned column">
        <div class="ui big button red">
          <i class="white signup icon"></i>
          Sign Up
        </div>
      </div>
    </div>
    <div class="ui vertical divider">
      Or
    </div>
  </div>